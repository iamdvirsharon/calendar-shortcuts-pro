{
    "manifest_version": 2,
    "name": "Calendar Shortcuts Pro",
    "version": "1.0.0",
    "description": "Customizable keyboard shortcuts for Google Calendar",
    "permissions": [
      "https://calendar.google.com/*",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["https://calendar.google.com/*"],
        "js": ["content.js"]
      }
    ],
    "options_page": "options.html",
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
